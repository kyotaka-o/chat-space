.messages__message
  .messages__message__info{data:{id: "#{message.id}"}}
    %p.messages__message__info__user-name
      =message.user.name
    %p.messages__message__info__date
      =message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.messages__message__text
    - if message.body.present?
      = message.body
    - if message.image.present?
      = image_tag "#{message.image}"