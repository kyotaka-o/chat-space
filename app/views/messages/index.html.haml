.pop
  %p グループを作成しました
%aside.side-menu
  .side-menu__user
    .user-name
      %p
        oboso
    %ul.user-menu
      %li.user-menu__edit
        = link_to "#" do
          %i.fa.fa-edit 
      %li.user-menu__new-group
        = link_to "#" do
          %i.fa.fa-cog
  .side-menu__groups
    = render partial: "groups"
    
.chatspace
  .main-header
    .current-group
      .current-group__name
        グループ
      %ul.current-group__meber-list
        Member:
        = render partial: "members"
    .edit
      =link_to "#", class: "edit__btn" do
        Edit
  .messages
    = render partial: "messages"
  .form
    %form{:action => "#", :method => "get", :class => "form__box"}
      .form__box__input
        %input{:name => "message", :class => "form__box__input__text", :type => "text", :placeholder => "type a message"}
        %label.upload-label{for: "upload-icon", :class => "form__box__input__img-label"}
          %i.fa.fa-picture-o
          %input{:name => "img", :class => "form__box__input__img", :id => "upload-icon", :type => "file"}
      %input{:type => "submit", :class => "form__box__submit", :value => "Send"}
    
  

